<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:paddingTop="16dp"
    android:gravity="center|top"
    android:background="@drawable/background_100dp_red_box"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="6dp"
    android:clipToPadding="false">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_verify"
        android:textColor="@color/color_text_grayish_brown"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:includeFontPadding="false" />

        <EditText
            android:id="@+id/edt_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/white_1"
            android:elevation="@dimen/_6sdp"
            android:gravity="center"
            android:hint="@string/txt_verify_msg"
            android:includeFontPadding="false"
            android:inputType="number"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@color/color_text_grayish_brown">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_delete_warning_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Hủy bỏ"
            android:textSize="16sp"
            android:includeFontPadding="false"/>

        <Button
            android:id="@+id/dialog_delete_warning_confirm_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:includeFontPadding="false"/>
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>