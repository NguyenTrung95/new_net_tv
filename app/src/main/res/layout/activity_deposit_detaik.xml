<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_sign_up_title_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/btn_back_button"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:tint="@color/black_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_back_button" />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Chi tiết đơn hàng"
                android:textColor="@color/black_1"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey_1" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_don_hang_value"
                        android:textColor="@color/black_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ví nhận:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_vi_nhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiền:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_so_tien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phí:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_phi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black_1"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hình thức:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_hinh_thuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black_1"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày tạo:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_ngay_tao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_trang_thai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Thông tin nhận tiền:"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/lnBank"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngân hàng:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/lnctk"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chủ TK:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_chu_tk"
                        android:textColor="@color/black_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />

            </LinearLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"

                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số TK:"
                            android:textColor="@color/black_1"
                            android:textSize="@dimen/_13sdp" />

                    <TextView
                            android:id="@+id/tv_stk"
                            android:textColor="@color/black_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            tools:text="132123123123213" />


                </LinearLayout>

                <Button
                        android:id="@+id/btncopystk"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:text="Copy" />
            </FrameLayout>

            <LinearLayout
                    android:id="@+id/ll_atm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số thẻ ATM:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_so_atm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:text="Chi nhánh:"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_chi_nhanh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ln1"
                        android:layout_gravity="left|center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/nd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nội dung :"
                            android:textColor="@color/black_1"
                            android:textSize="@dimen/_13sdp" />

                    <TextView
                            android:id="@+id/tv_nd_ck"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/black_1"
                            android:maxLines="4"
                            android:layout_toEndOf="@+id/nd"
                              android:textSize="@dimen/_13sdp"
                            android:layout_toStartOf="@id/btncopycontent"
                            android:textStyle="bold"
                            tools:text="đasadsadasdasdsadasdasdasdasdasdád" />
                    <Button
                            android:id="@+id/btncopycontent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:text="Copy" />
                </RelativeLayout>


            </FrameLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiền chuyển:"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_13sdp" />

                <TextView
                        android:id="@+id/tv_stc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="Default" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

