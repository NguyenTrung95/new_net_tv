<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp"
    android:paddingStart="@dimen/_6sdp"
    android:paddingEnd="@dimen/_10sdp">

    <TextView
        android:id="@+id/tv_name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:layout_toStartOf="@+id/rl_form"
        tools:text="Viettel 20.000đ" />

    <RelativeLayout
        android:id="@+id/rl_form"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imv_minus"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/tv_count"
            android:layout_centerVertical="true"
            android:background="@color/green_2"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/grey_1"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"
            tools:text="2" />

        <ImageView
            android:id="@+id/imv_plus"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/tv_count"
            android:layout_centerVertical="true"
            android:background="@color/green_2"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_plus" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/rl_form"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:text="20.000đ" />

</RelativeLayout>