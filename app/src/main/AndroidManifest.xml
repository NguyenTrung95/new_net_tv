<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.nencer.nencerwallet">
    <dist:module dist:instant="true"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".App"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name="com.nencer.nencerwallet.ui.user.SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.nencer.nencerwallet.ui.user.ForgotPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.nencer.nencerwallet.ui.user.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="com.nencer.nencerwallet.ui.payment.PaymentDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.nencer.nencerwallet.ui.user.userinfo.UserInfoActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.main.history.HistoryDetailActivity"
                android:screenOrientation="portrait"/>
        <activity android:name="com.nencer.nencerwallet.ui.wallet.TranferActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.payment.BuyCardActivity"/>
        <activity android:name="com.nencer.nencerwallet.ui.wallet.DepositActivity"
                android:screenOrientation="portrait"/>
        <activity android:name="com.nencer.nencerwallet.ui.wallet.WithDrawActivity"
                android:screenOrientation="portrait"/>
        <activity android:name="com.nencer.nencerwallet.ui.wallet.InsertAccountBankActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.ExchangeActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.main.news.NewsDetailActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.topup.TopupActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.main.history.HistoryModuleActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.wallet.DepositDetailActivity"
                android:screenOrientation="portrait"/>

    </application>

</manifest>