<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imvThumbnail"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        tools:src="@drawable/ic_news" />

    <TextView
        android:id="@+id/tvTitle"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imvThumbnail"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        tools:text="Defiant Binance CEO Insists \u2018We Aren\u2019t Short on Funds\u2019 after $40 Million Hack" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/viewLine"
        android:singleLine="true"
        android:layout_toEndOf="@+id/imvThumbnail"
        android:textStyle="italic"
        android:layout_toStartOf="@id/tvView"
        android:textSize="@dimen/_9sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        tools:text="2019-05-08 06:01:56" />
    <TextView
        android:id="@+id/tvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/viewLine"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/_9sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        tools:text="CNN" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/imvThumbnail"
        android:background="@color/grey_3" />

</RelativeLayout>